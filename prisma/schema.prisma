generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  user_id     String   @id @db.VarChar(32)
  username    String   @unique
  password    String
  name        String
  role        Role     @default(BORROWER)
  status      String?
  email       String?
  noHandphone String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  authentications  Authentication[]
  loans            Loan[]            @relation("UserLoans") // loan utama (borrower)
  loanParticipants LoanParticipant[] // loan di mana user jadi participant
}

model Category {
  category_id   String    @id @db.VarChar(32)
  category_name String    @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  products      Product[]
}

model Product {
  product_id      String   @id @db.VarChar(32)
  product_name    String   @unique
  product_image   String?
  quantity        Int
  product_avaible Int
  category_id     String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  category  Category   @relation(fields: [category_id], references: [category_id], onDelete: Cascade)
  loanItems LoanItem[]
}

model Loan {
  loan_id     String     @id @db.VarChar(32)
  borrower_id String
  status      LoanStatus @default(REQUESTED)
  spt_file    String?
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt

  borrower     User              @relation("UserLoans", fields: [borrower_id], references: [user_id], onDelete: Cascade)
  items        LoanItem[]
  participants LoanParticipant[]
  histories    LoanHistory[]
}

model LoanItem {
  loan_item_id String @id @db.VarChar(32)
  loan_id      String
  product_id   String
  quantity     Int

  loan    Loan    @relation(fields: [loan_id], references: [loan_id], onDelete: Cascade)
  product Product @relation(fields: [product_id], references: [product_id], onDelete: Cascade)
}

model LoanParticipant {
  id         String          @id @db.VarChar(32)
  loan_id    String
  user_id    String
  role       ParticipantRole // enum baru: OWNER atau INVITED
  created_at DateTime        @default(now())

  loan Loan @relation(fields: [loan_id], references: [loan_id], onDelete: Cascade)
  user User @relation(fields: [user_id], references: [user_id], onDelete: Cascade)

  @@unique([loan_id, user_id])
}

model LoanHistory {
  history_id String   @id @db.VarChar(32)
  loan_id    String
  activity   String
  timestamp  DateTime @default(now())

  loan Loan @relation(fields: [loan_id], references: [loan_id], onDelete: Cascade)
}

model Authentication {
  id        String   @id @db.VarChar(32)
  user_id   String
  token     String   @unique
  createdAt DateTime @default(now())

  user User @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
}

enum Role {
  SUPERADMIN
  ADMIN
  BORROWER
}

enum LoanStatus {
  REQUESTED
  APPROVED
  REJECTED
  RETURNED
}

enum ParticipantRole {
  OWNER
  INVITED
}
