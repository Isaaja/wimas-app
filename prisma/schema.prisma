generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  user_id          String            @id @db.VarChar(32)
  name             String
  username         String            @unique
  password         String
  role             Role              @default(BORROWER)
  email            String?
  noHandphone      String?
  status           LoanStatus?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  loans            Loan[]            @relation("UserLoans")
  loanParticipants LoanParticipant[]

  @@index([role])
  @@index([username])
}

model Category {
  category_id   String    @id @db.VarChar(32)
  category_name String    @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  products      Product[]
}

model Product {
  product_id      String            @id @db.VarChar(32)
  product_name    String            @unique
  product_image   String?
  quantity        Int
  product_avaible Int
  category_id     String
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  loanItems       LoanItem[]
  requestItems    LoanRequestItem[]
  category        Category          @relation(fields: [category_id], references: [category_id], onDelete: Cascade)
  units           ProductUnit[]

  @@index([category_id])
  @@index([product_avaible])
}

model ProductUnit {
  unit_id      String        @id @db.VarChar(32)
  product_id   String
  serialNumber String        @unique
  status       UnitStatus    @default(AVAILABLE)
  condition    ItemCondition @default(GOOD)
  note         String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  loanItems    LoanItem[]
  product      Product       @relation(fields: [product_id], references: [product_id], onDelete: Cascade)

  @@index([product_id])
  @@index([status])
}

model Loan {
  loan_id      String            @id @db.VarChar(32)
  borrower_id  String
  status       LoanStatus        @default(REQUESTED)
  created_at   DateTime          @default(now())
  updated_at   DateTime          @updatedAt
  borrower     User              @relation("UserLoans", fields: [borrower_id], references: [user_id], onDelete: Cascade)
  items        LoanItem[]
  participants LoanParticipant[]
  requestItems LoanRequestItem[]
  report       Report?

  @@index([borrower_id])
  @@index([status])
  @@index([created_at])
}

model LoanItem {
  loan_item_id String      @id @db.VarChar(32)
  loan_id      String
  product_id   String
  unit_id      String
  loan         Loan        @relation(fields: [loan_id], references: [loan_id], onDelete: Cascade)
  product      Product     @relation(fields: [product_id], references: [product_id], onDelete: Cascade)
  unit         ProductUnit @relation(fields: [unit_id], references: [unit_id], onDelete: Cascade)
}

model LoanParticipant {
  id         String          @id @db.VarChar(32)
  loan_id    String
  user_id    String
  role       ParticipantRole
  created_at DateTime        @default(now())
  loan       Loan            @relation(fields: [loan_id], references: [loan_id], onDelete: Cascade)
  user       User            @relation(fields: [user_id], references: [user_id], onDelete: Cascade)

  @@unique([loan_id, user_id])
}

model LoanRequestItem {
  id         String  @id @db.VarChar(32)
  loan_id    String
  product_id String
  quantity   Int
  loan       Loan    @relation(fields: [loan_id], references: [loan_id])
  product    Product @relation(fields: [product_id], references: [product_id])
}

model Report {
  report_id          String   @id @db.VarChar(32)
  loan_id            String   @unique
  spt_file           String?
  spt_number         String
  destination        String
  place_of_execution String
  start_date         DateTime
  end_date           DateTime
  created_at         DateTime @default(now())
  updated_at         DateTime @updatedAt
  loan               Loan     @relation(fields: [loan_id], references: [loan_id], onDelete: Cascade)
}

enum Role {
  ADMIN
  BORROWER
}

enum LoanStatus {
  REQUESTED
  APPROVED
  REJECTED
  RETURNED
  DONE
}

enum ParticipantRole {
  OWNER
  INVITED
}

enum UnitStatus {
  AVAILABLE
  LOANED
  DAMAGED
}

enum ItemCondition {
  GOOD
  DAMAGED
}
